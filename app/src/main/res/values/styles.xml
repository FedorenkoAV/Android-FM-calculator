<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/background</item>
        <item name="android:navigationBarColor">@color/background</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.Transparent" parent="Theme.AppCompat.NoActionBar">
        <item name="android:background">#33000000</item> <!-- Or any transparency or color you need -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
    </style>

    <style name="FuncButton">
        <item name="android:layout_width">37dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:textSize">12dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginLeft">6dp</item>
        <item name="android:layout_marginRight">6dp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">6dp</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:background">@drawable/func_btn_selector</item>
        <item name="android:hapticFeedbackEnabled">true</item>
        <item name="customFont">@string/font_liberation_serif_bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="BasicButton">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">33dp</item>
        <item name="android:textSize">24dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginLeft">6dp</item>
        <item name="android:layout_marginRight">6dp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">6dp</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:background">@drawable/btn_selector</item>
        <item name="android:hapticFeedbackEnabled">true</item>
        <item name="customFont">@string/font_liberation_serif_bold</item>
        <item name="android:shadowColor">@color/colorBlackText</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="yellow_text">
        <item name="android:textSize">10dp</item>
        <item name="android:textColor">@color/colorLabelYellowText</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="customFont">@string/font_liberation_serif_bold</item>
    </style>

    <style name="super_yellow_text">
        <item name="android:textSize">10dp</item>
        <item name="android:textColor">@color/colorLabelSuperYellowText</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="customFont">@string/font_liberation_serif_bold</item>
    </style>

    <style name="red_text">
        <item name="android:textSize">10dp</item>
        <item name="android:textColor">@color/colorLabelRedText</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="customFont">@string/font_liberation_serif_bold</item>
    </style>

    <style name="blue_text">
        <item name="android:textSize">10dp</item>
        <item name="android:textColor">@color/colorLabelBlueText</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="customFont">@string/font_liberation_serif_bold</item>
    </style>

    <style name="tableRowsFuncText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="tableRowsFuncButtons">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="tableRowsBasicText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="tableRowsBasicButtons">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="display">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:background">@color/colorLCDBackground</item>
        <item name="android:gravity">right|bottom</item>
        <item name="android:textColor">@color/colorLCDFont</item>
        <item name="android:textSize">64dp</item>
        <item name="customFont">@string/font_7segment</item>
    </style>

    <style name="status">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/colorLCDBackground</item>
        <item name="android:textColor">@color/colorLCDFont</item>
        <item name="customFont">@string/font_liberation_serif_regular</item>
        <item name="android:textSize">10dp</item>
        <item name="android:paddingLeft">3dp</item>
        <item name="android:paddingRight">2dp</item>
    </style>

    <style name="mem_err">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="customFont">@string/font_liberation_serif_bold</item>
        <item name="android:background">@color/colorLCDBackground</item>
        <item name="android:textColor">@color/colorLCDFont</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="protocol">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="customFont">@string/texasLED2</item>
        <item name="android:background">@color/colorLCDBackground</item>
        <item name="android:textColor">@color/colorLCDFont</item>
        <item name="android:textSize">15dp</item>
    </style>

    <style name="protocol_dialog">
        <item name="customFont">@string/font_liberation_serif_bold</item>
    </style>
</resources>
